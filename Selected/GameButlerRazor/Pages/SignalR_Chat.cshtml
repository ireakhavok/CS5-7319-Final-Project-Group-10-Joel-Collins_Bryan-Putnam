@page
@model GameButlerRazor.Pages.SignalR_ChatModel
@{
    ViewData["Title"] = "Chat Board"; 
}

<style>
    .align-center { 
        display: flex; 
        justify-content: left;
        align-items: center;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row p-1">
        <div class="col-1 align-center">User</div>
        <div class="col-5"><input type="text" id="userInput" class="form-control" placeholder="Sender Name..." /></div>
    </div>
    <div class="row p-1">
        <div class="col-1 align-center">Message</div>
        <div class="col-5"><input type="text" class="w-100 form-control" id="messageInput" placeholder="Message..." /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>